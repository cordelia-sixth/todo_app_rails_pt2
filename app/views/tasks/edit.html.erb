<h1>編集</h1>

<%= link_to '一覧へ', tasks_path %>

<%= form_with model: @task do |form| %>
<div class="field">
  <%= form.label :やること %><br>
  <%= form.text_area :title %>
</div>
<div class="field">
  <%= form.label :内容 %><br>
  <%= form.text_field :body %>
</div>
<div class="actions">
  <%= form.submit %>
</div>
<% end %>
